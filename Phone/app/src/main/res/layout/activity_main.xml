<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#004277" android:backgroundTint="#FFFFFF"
        android:backgroundTintMode="multiply">
    <TextView
            android:text="Enter code to join room"
            android:layout_width="288dp"
            android:layout_height="42dp" android:id="@+id/lable"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.076" android:textSize="24sp" android:textColor="#FF5722"
            android:textAlignment="center"/>
    <EditText
            android:layout_width="274dp"
            android:layout_height="104dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/input"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lable" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.496" app:layout_constraintVertical_bias="0.355"
            android:textSize="36sp" android:gravity="center|center_vertical" android:textColor="#FF5722"/>
    <Button
            android:text="Join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/join"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginBottom="172dp"/>
    <TextView
            android:text="Succesfully joined"
            android:layout_width="292dp"
            android:layout_height="48dp" android:id="@+id/succesLabel"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:textSize="30sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>