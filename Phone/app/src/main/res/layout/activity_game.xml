<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameActivity" android:background="#C5D5B4" android:clipToPadding="true" android:id="@+id/main">

    <Button
            android:text="Button"
            android:layout_width="180dp"
            android:layout_height="248dp" android:id="@+id/c"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.93" app:layout_constraintVertical_bias="0.227"
            android:background="@android:color/holo_blue_dark"/>
    <Button
            android:text="Button"
            android:layout_width="180dp"
            android:layout_height="248dp" android:id="@+id/b"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.457" app:layout_constraintVertical_bias="0.0"
            android:background="@android:color/holo_orange_light" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/a" app:layout_constraintEnd_toStartOf="@+id/d"/>

    <Button
            android:text="Button"
            android:layout_width="180dp"
            android:layout_height="248dp" android:id="@+id/d"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.93"
            app:layout_constraintVertical_bias="0.096"
            android:background="@color/green" app:layout_constraintTop_toBottomOf="@+id/c"/>
    <Button
            android:text="Button"
            android:layout_width="180dp"
            android:layout_height="248dp" android:id="@+id/a"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.457" app:layout_constraintVertical_bias="0.227"
            android:background="@color/red" app:layout_constraintEnd_toStartOf="@+id/c"/>
    <TextView
            android:text="Example example example wow I love examples"
            android:layout_width="388dp"
            android:layout_height="67dp" android:id="@+id/question"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.024" android:fontFamily="@font/roboto_black" android:textSize="24sp"
            android:textAlignment="center" app:layout_constraintHorizontal_bias="0.304"/>
    <TextView
            android:text="Example example example wow I love examples"
            android:layout_width="399dp"
            android:layout_height="169dp" android:id="@+id/reveal"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.637" android:fontFamily="@font/roboto_black" android:textSize="24sp"
            android:textAlignment="center"/>
    <TextView
            android:text="Time left: 69"
            android:layout_width="303dp"
            android:layout_height="39dp" android:id="@+id/timer"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.949" android:textSize="30sp" android:textAlignment="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>